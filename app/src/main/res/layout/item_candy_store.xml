<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="220dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_cs_nam"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="fitCenter">

        </ImageView>

        <TextView
            android:id="@+id/it_cs_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Cancha mediana"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp">
        </TextView>

        <TextView
            android:id="@+id/it_pri_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/. 18.90"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="16dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_remove_pro"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:enabled="false"
                android:textColor="@color/white"
                android:background="@drawable/btn_redondo_general"
                android:text="-">
            </Button>
            <TextView
                android:id="@+id/txt_num_pro"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="0">

            </TextView>
            <Button
                android:id="@+id/btn_add_pro"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/btn_redondo_general"

                android:text="+">
            </Button>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>